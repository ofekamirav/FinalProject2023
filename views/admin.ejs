        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">New Capsule Form</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="add-product-form">
              <div class="mb-3">
                <label for="name" class="form-label">Name Of Capsule</label>
                <input type="text" class="form-control"   name="name" required>
              </div>
              <div class="mb-3">
                <label for="origin" class="form-label">Origin</label>
                <input type="text" class="form-control"   name="origin" required>
              </div>
              <div class="mb-3">
                <label for="origin" class="form-label">Type</label>
                <input type="text" class="form-control"   name="type" required>
              </div>
              <div class="mb-3">
                <label for="origin" class="form-label">Intensity</label>
                <input type="text" class="form-control"   name="intensity" required>
              </div>
              <div class="mb-3">
                <label for="origin" class="form-label">Flavor</label>
                <input type="text" class="form-control"   name="flavor" required>
              </div>
              <div class="mb-3">
                <label for="origin" class="form-label">Price</label>
                <input type="text" class="form-control"  name="price" required>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
          <div class="modal-footer">
    
          </div>
        </div>
      </div>
