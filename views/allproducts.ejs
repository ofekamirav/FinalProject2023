<!-- Search bar and filters -->
<div class="container-fluid bg-light p-3 mb-3">
    <div class="row justify-content-center">
       <!-- Search form -->
       <form class="form-inline">
        <input class="form-control mr-sm-2 col-xl-6" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>

   <!-- Filters (hidden by default) -->
<div id="filters" class="row">
    <div class="col-md-4 col-sm-6 col-12">
        <h5>Country:</h5>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="" id="country1">
            <label class="form-check-label" for="country1">
                Mexico 
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="" id="country2">
            <label class="form-check-label" for="country2">
                Colombia
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="" id="country2">
            <label class="form-check-label" for="country3">
                Ethiopia
            </label>
        </div>
        <!-- Add more countries as needed -->
    
            <h5>Price:</h5>
            <div class="form-group">
                <select class="form-control" id="priceFilter" style="height: fit-content;width: fit-content;">
                    <option>Expensive to Cheap</option>
                    <option>Cheap to Expensive</option>
                </select>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 col-12">
            <h5>Sweetness Level:</h5>
            <div class="form-group">
                <select class="form-control" id="sweetnessFilter" style="height: fit-content;width: fit-content;">
                    <option>Most to Least</option>
                    <option>Least to Most</option>
                </select>
            </div>
        </div>
    </div>
</div>
</div>
</div>


     <div class="container-fluid">
      <div class="row">
          <% capsules.forEach(function(capsule) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                <div class="card">
                      <% if (capsule.image) { %>
                        <a href="/show1capsule/<%= capsule['_id'] %>">
                          <img class="card-img-top" style="width:200px" height="200px" src="<%= capsule.image %>" alt="<%= capsule["_id"] %> Image" />
                      <% } else { %>
                          <p>No image available</p>
                      <% } %>
                      <div class="card-body">
                          <h2 class="card-title"><%= capsule["_id"] %></h2>
                          <p class="card-text">Price: $<%= capsule.price %></p>
                          <p class="card-text">Origin: <%= capsule.origin %></p>
                          <p class="card-text" id="description"><%= capsule.flavor %></p>
                          <div class="button-container2">
                              <button class="btn btn-primary" type="submit" name="action" value="cart:<%= capsule["_id"] %>">Add to Cart List</button>
                              <form method="POST" action="/cart/Addto">
                                <input type="hidden" name="productId" value="<%= capsule['_id'] %>">
                                <button class="btn btn-primary" type="submit" name="action" value="cart:<%= capsule["_id"] %>">Add to Cart</button>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          <% }); %>
      </div>
  </div>


