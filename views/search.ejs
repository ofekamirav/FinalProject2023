<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/Shop.css">
    <title>Search Results</title>
</head>
<body>
    <div class="container">
        <h1>Search Results</h1>
        <div class="row">
            <% capsules.forEach(function(capsule) { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <% if (capsule.image) { %>
                    <img class="card-img-top" src="<%= capsule.image %>" alt="<%= capsule["_id"] %> Image" />
                    <% } else { %>
                    <p>No image available</p>
                    <% } %>
                    <div class="card-body">
                        <h2 class="card-title"><%= capsule["_id"] %></h2>
                        <p class="card-text">Price: $<%= capsule.price %></p>
                        <p class="card-text">Origin: <%= capsule.origin %></p>
                        <p class="card-text" id="description"><%= capsule.flavor %></p>
                        <div class="button-container2">
                            <form method="POST" action="/cart/Addto">
                                <input type="hidden" name="productId" value="<%= capsule['_id'] %>">
                                <button class="btn btn-primary" type="submit" name="action" value="cart:<%= capsule["_id"] %>">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
