</head>
<body>
  
     <!-- Navbar -->
     <header class="header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <img src="Gallery/logo.png" width="50" height="50" alt="">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="/" style="hover{cursor: pointer;}">Secret Coffee</a>
                <ul class="navbar-nav me-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/shop" >Store<i class="bi bi-shop-window"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact us</a>
                    </li>
                            
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link"  href="/login" id="login">
                          Login<i class="bi bi-door-open" title="Log In"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link"  href="/register" id="login">
                        Register<i class="bi bi-clipboard" title="Register"></i>
                      </a>
                  </li>
                    <li>
                        <button type="button" class="btn btn-link"><span class="bi bi-cart black-color"></span></button>
                    </li>
                </ul>            
            </div>
        </nav>
    </header>
  <!-- Navbar -->

    <div class="banner">
        <div class="container p-5">
            <div class="card mx-3 mt-n2 shadow-lg" style="border-radius:0px; border:none">
                <div class="card-body p-5 bg-light">
                    <h4 class="card-title mb-3 text-dark text-uppercase" style="font-weight:700">Registration Form</h4>
                    <form id="registration-form" action="/register" method="post" class="reg-form">
                        <!-- <form id="registration-form" class="reg-form"> -->
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="username" placeholder="Your Name" id="username">
                                    <label for="floatingTextInput1">Email:</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" name="password" placeholder="At least 6 characters" id="password">
                                    <label for="pass">Password:</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="firstName" placeholder="" id="firstName">
                                    <label for="floatingTextInput1">First Name:</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="lastName" placeholder="" id="lastName">
                                    <label for="floatingTextInput1">Last Name:</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="country" placeholder="" id="country">
                                    <label for="floatingTextInput1">Country:</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="adress" placeholder="" id="adress">
                                    <label for="floatingTextInput1">Full Adress ( City,Street):</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="postalcode" placeholder="" id="postalcode">
                                    <label for="floatingTextInput1">Postal Code:</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="text-center">
                                <button id="register-button" type="submit" class="btn btn-primary" style="border-radius:0px">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<!-- Include jQuery first -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>

